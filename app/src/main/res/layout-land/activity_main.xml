<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.altran.bguetin.following.MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context="com.altran.bguetin.following.MainActivity">

        <Button
            android:id="@+id/followingModeButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:text="@string/text_following"
            android:textSize="25sp" />

        <Button
            android:id="@+id/wifiModeButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="@string/text_wifi"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context="com.altran.bguetin.following.MainActivity">

        <Button
            android:id="@+id/sensorsModeButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:text="@string/text_sensors"
            android:textSize="25sp" />

        <Button
            android:id="@+id/gpsModeButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="@string/text_gps_only"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>